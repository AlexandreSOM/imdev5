{% extends 'base.html.twig' %}

{% block title %}Plateforme Imdev{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; width: 95%; font: 14px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .example-wrapper table { text-align: center;}
        .example-wrapper thead { font-size: 14px;}
        .example-wrapper tbody { font-size: 12px;}
    </style>


    <h1> PAGE CATEGORIE </h1>


    <div class="card example-wrapper">

        <div class="card-header">
            <div>
                <h3> Ajouter un cat√©gorie <button type="button" class="btn btn-success"> <a href="{{ path('categorie-ajout') }}" style="color:white"> <i class="fas fa-folder-plus"></i> </a> </button>
                </h3>
            </div>
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link active" href="{{  path('home') }}"> MES COMPTES </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('categorie') }}">PAR CATEGORIES</a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr class="table-active">
                    <th scope="col-md-4">NOM DE LA CATEGORIE</th>
                    <th scope="col-md-4">MODIFICATION</th>

                </tr>
                </thead>
                <tbody class="table">


                {% for categorie in categories %}
                <tr>
                    <th scope="row">{{ categorie.nomCategorie }}</th>
                    <td>
                        <button type="button" class="btn btn-outline-success"> <a href="{{ path('categorie-modifier', {'categorie': categorie.id}) }}"> <i class="fas fa-user-edit"></i>  </a>  </button>
                        <a href="#"> {% include 'modal/delete-categorie.html.twig' with {'name': 'modal-delete'} %} </a>
                    </td>
                    {% endfor %}

                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

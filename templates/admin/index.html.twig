<div class="example-wrapper">
    <h1>Listes des gestionnaires <button type="button" class="btn btn-success"> <a href="{{ path('app_register') }}" style="color:white"> <i class="fas fa-user-plus"></i> </a> </button>  </h1>


    <div class="card-body">
        <table class="table table-hover">
            <thead>
            <tr class="table-active">
                <th scope="col">NOM</th>
                <th scope="col">ROLES</th>
                <th scope="col">MDP</th>
                <th scope="col">MODIFICATION</th>
            </tr>
            </thead>
            <tbody class="table">


            {% for gestionnaire in gestionnaires %}
            <tr>
                <th scope="row">{{ gestionnaire.username }}</th>
                <td>{{ gestionnaire.roles[0] }}</td>
                <td>{{ gestionnaire.password }}</td>
                <td>
                    <button type="button" class="btn btn-outline-success"> <a href="{{ path('gestionnaire-modifier', {'gestionnaire': gestionnaire.id}) }}"> <i class="fas fa-user-edit"></i>  </a>  </button>
                    <a href="#"> {% include 'modal/delete-gestionnaire.html.twig' with {'name': 'modal-delete'} %} </a>
                </td>
                {% endfor %}

            </tr>
            </tbody>
        </table>
    </div>

</div>
{% endblock %}

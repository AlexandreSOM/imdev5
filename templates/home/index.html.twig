{% extends 'base.html.twig' %}

{% block title %}Plateforme Imdev{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; width: 95%; font: 14px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .example-wrapper table { text-align: center;}
        .example-wrapper thead { font-size: 14px;}
        .example-wrapper tbody { font-size: 12px;}
    </style>


    <h1> Bienvenue - Accueil</h1>

     <div class="card example-wrapper">

        <div class="card-header">
            <div>
                <h3> Liste de vos comptes <button type="button" class="btn btn-success"> <a href="{{ path('compte-ajout') }}" style="color:white"> <i class="fas fa-user-plus"></i> </a> </button>
                </h3>
            </div>

            <h6> Class√© par :</h6>
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{  path('home') }}"> TOUT LES COMPTES  </a>
                        </li>
                        <li class="nav-item">
{#                            <a class="nav-link" href="{{ path('categorie') }}">PAR CATEGORIES</a>#}
                        </li>
                    </ul>
        </div>



{#Affichage du tableau - liste des comptes #}

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr class="table-active">
                    <th scope="col">CATEGORIE</th>
                    <th scope="col">COMPTE</th>
                    <th scope="col">LIEN</th>
                    <th scope="col">LOGIN</th>
                    <th scope="col">PASSWORD</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">MODIFICATION</th>
                </tr>
                </thead>
                <tbody class="table">


                {% for compte in comptes %}
                <tr>
                    <td>
                        {{ compte.category.title }}
                    </td>
                    <th scope="row">{{ compte.nomcompte }}</th>
                    <td>{{ compte.urlcompte }}</td>
                    <td>{{ compte.logincompte }}</td>
                    <td>{{ compte.passwordcompte  }} <a href="#"> {% include 'modal/hash-modal.html.twig' with {'name': 'modal-delete'} %} </a>
                    </td>

                    <td>{{ compte.descriptioncompte }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-success"> <a href="{{ path('compte-modifier', {'compte': compte.id}) }}"> <i class="fas fa-user-edit"></i>  </a>  </button>
                        <a href="#"> {% include 'modal/delete.compte.html.twig' with {'name': 'modal-delete'} %} </a>
                    </td>
                    {% endfor %}

                </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
